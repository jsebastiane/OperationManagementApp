<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WhiteFont">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/futura_medium</item>
    </style>

    <style name="WhiteFontBold">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/futura_heavy</item>
    </style>

    <style name="PrimaryFont">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/futura_medium</item>
    </style>

    <style name="BlackFont">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/futura_medium</item>
    </style>

    <style name="BlackFontBold">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/futura_heavy</item>
    </style>

    <style name="mySpinnerItemStyle" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/futura_medium</item>
    </style>

</resources>
